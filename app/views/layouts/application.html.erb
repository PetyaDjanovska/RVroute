<!DOCTYPE html>
<html>
  <head>
    <title>RVroute</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body>
   	<div class="navigation">
      <ul>
        <a href="/campsites">All campsites</a>
        <a href="/campsites/new">Add campsite	</a>
        <a href="/favorites">Your personal favorites</a>
        <a href="/users/<%= current_user.id%>">Your profile</a>
        <a href="/best_campsite">Best campsite</a>
        <a href="/search">Search by location</a>
        
      </ul>
    </div>
    
    <div class="container">
      <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
   </body>
</html>
